generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String   @unique
  password      String
  createdAt     DateTime @default(now())
  amountInCents Int

  sendedTransactions   Transaction[] @relation("fromAccount")
  receivedTransactions Transaction[] @relation("toAccount")

  @@map("accounts")
}

model Transaction {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  idempotenceKey String   @unique
  fromAccountId  String   @db.ObjectId
  toAccountId    String   @db.ObjectId
  amountInCents  Int
  description    String?
  createdAt      DateTime @default(now())

  from Account @relation("fromAccount", fields: [fromAccountId], references: [id])
  to   Account @relation("toAccount", fields: [toAccountId], references: [id])

  @@unique([idempotenceKey, fromAccountId, toAccountId])
  @@map("transactions")
}
